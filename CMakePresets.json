{
  "version": 3,

"configurePresets": [
{
  "name": "multi",
  "displayName": "Ninja Multi-Config",
  "generator": "Ninja Multi-Config"
},
{
  "name": "build",
  "displayName": "build all libraries",
  "description": "Build all external libraries (except MPI) without searching for existing libraries.",
  "cacheVariables": {
    "lapack_external": "on",
    "scalapack_external": "on"
  }
},
{
  "name": "intel",
  "displayName": "Intel oneAPI compiler",
  "environment": {
    "CC": "icx",
    "FC": "ifx"
  }
},
{
  "name": "phony"
}
],
"buildPresets": [
  {
    "name": "release",
    "description": "build Release (optimized)",
    "configurePreset": "multi",
    "configuration": "Release"
  },
  {
    "name": "debug",
    "description": "build Debug (slower runtime)",
    "configurePreset": "multi",
    "configuration": "Debug"
  },
  {
    "name": "intel",
    "description": "build with Intel compiler",
    "configurePreset": "intel"
  }
],
"testPresets": [
{
  "name": "default",
  "configurePreset": "phony",
  "output": {
    "outputOnFailure": true,
    "verbosity": "default"
  },
  "execution": {
    "noTestsAction": "error",
    "stopOnFailure": false
  }
},
{
  "name": "release", "inherits": "default",
  "description": "test Release",
  "configurePreset": "multi",
  "configuration": "Release"
},
{
  "name": "debug", "inherits": "default",
  "description": "test Debug",
  "configurePreset": "multi",
  "configuration": "Debug"
},
{
  "name": "intel", "inherits": "default",
  "description": "test with Intel compiler",
  "configurePreset": "intel"
}
]
}
